{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-5">
		<h1>Espace membre
		</h1>
		<div class="row">
			<div class="col-md-3 mb-4">{% include 'account/menu.html.twig' %}</div>
			<div class="col-md-9">
				<h5>Ma liste de souhait</h5>

				{% if app.user.wishlists|length > 0 %}
					<div class="row">
						{% for product in app.user.wishlists %}
							<div class="col-md-3 text-center mt-2 mb-2">
								<a href=" {{ path('app_product', { slug: product.slug }) }}" class="text-decoration-none">
									<img src="/uploads/{{product.illustration}}" alt="{{ product.name }}" class="img-fluid"/>
									<span class="d-block fw-bold text-black mt-2">{{ product.name }}</span>
								</a>
								<span class="d-block">{{ product.pricewt | price }}</span>
								<a class="small text-secondary" href="{{ path('app_account_wishlist_remove', {id: product.id}) }}">Supprimer</a>
							</div>
						{% endfor %}
					</div>
				{% else %}
					<div class="alert alert-info">Vous n'avez pas de produit dans votre liste de souhait.</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
