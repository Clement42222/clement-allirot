{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-5">
		<h1>{{ category.name }}</h1>
		<p>Cette catégorie contient
			{{ category.products | length }}
			{% if category.products | length > 1 %}
				produits
			{% else %}
				produit
			{% endif %}
		</p>

		<div class="row">
			{% for product in category.products %}
				<div class="col-md-3 text-center mt-2">

					<a href=" {{ path('app_product', { slug: product.slug }) }}" class="text-decoration-none">
						<img src="/uploads/{{product.illustration}}" alt="{{ product.name }}" class="img-fluid"/>
						<span class="d-block fw-bold text-black mt-2">{{ product.name }}</span>

					</a>

					<span class="d-block">{{ product.pricewt | price }}</span>

					<hr>
					<a class="btn btn-primary mb-5" href="{{ path('app_product', {slug: product.slug}) }}">Découvrir</a>


					{# <a href="{{ path('app_cart_add', {id:product.id}) }}"  #}
					{# class="btn btn-success img-fluid w-100 mt-2 mb-4">Ajouter au panier</a> #}
				</div>
			{% endfor %}
		</div>


	</div>
{% endblock %}
