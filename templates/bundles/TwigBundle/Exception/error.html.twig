{% extends 'base.html.twig' %}

    {% block body %}
    <div class="container my-5">
        {% if status_code == 404 %}
            <h1> <span class="badge text-bg-info">Page Introuvable ({{ status_code }})</span></h1>
            <p>La page que vous cherchez n'existe pas. <hr>
                <a href="{{ path('app_home') }}">Retour à l'accueil</a>
            </p>
        {% elseif status_code == 500 %}
            <h1> <span class="badge text-bg-danger">Erreur Serveur ({{ status_code }}) </span></h1>
            <p>
                <hr>
                {{ exception.message }}
            </p>
            <pre><u>Plus d'informations :</u> <br><br>{{ exception }}</pre>
            <pre>Fichiers log : /var/log/</pre>
            <hr>
            {% else %}
                <h1>Erreur
                    {{ status_code }}</h1>
                <p>Une erreur est survenue, veuillez réessayer plus tard.
                    <a href="{{ path('app_home') }}">Retour à l'accueil</a>
                </p>
            
        </div>
    
      {% endif %} {% endblock %}
    